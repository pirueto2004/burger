<!--Jumbotron-->
<div class="jumbotron text-center bg-primary text-white">
    <h1 class="display-4" id="app-title">Awesome Burger <img src="/public/assets/images/burger4.png"></h1>
    <p class="lead">Welcome to Awesome Burger. Home of the Awesome Burger.</p>
</div>
<h1>Eat-Da-Burger!</h1>

<div class="card border border-primary">
    <div class="card-header bg-primary text-white">
        Burgers
    </div>
    <!--Div to hold burgers that have not been devoured yet-->
    <div class="card-body">
            {{#each burgers}}
            {{#unless devoured}}
                {{> burgers/burger-block devour=false}}
            {{/unless}}
            {{/each}}
    </div>
</div>


<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

 <button type="submit">Add Burger</button>
</form>
