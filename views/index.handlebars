<!--Jumbotron-->
<div class="jumbotron text-center bg-warning text-white">
    <h1 class="display-4" id="app-title">Delicious Burger <img src="/assets/images/burger2.png"></h1>
    <p class="lead">Welcome to Delicious Burger. Home of the Juicy Burger.</p>
</div>
<h1>Eat-Da-Burger!</h1>

<div class="card border border-warning">
    <div class="card-header bg-warning text-white">
        Burgers
    </div>
    <!--Div to hold burgers that have not been devoured yet-->
    <div class="card-body">
            {{#each burgers}}
            {{#unless devoured}}
                {{> burgers/burger-block devour=false}}
            {{/unless}}
            {{/each}}
    </div>
</div>


<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

 <button type="submit">Add Burger</button>
</form>
